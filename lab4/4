#include <stdio.h> 
#include <math.h> 
#include <stdlib.h> 
int main()
{
    system("chcp 1251");
    system("cls");
    int a, b, s1, s2, s4, a2, b2;
    float s3;
    printf("Введите число : ");
    scanf_s("%d", &a);
    printf("Введите ещё число: ");
    scanf_s("%d", &b);
    a2 = a * a;
    b2 = b * b;

    s1 = a2 + b2;
    s2 = a2 - b2;
    s3 = a2 / b2;
    s4 = a2 * b2;
    printf("Сумма: %d, Разность : %d, Частное : %.2f, Произведение : %d \n", s1, s2, s3, s4);
    return 0;
}
