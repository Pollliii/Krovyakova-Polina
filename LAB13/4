#include <stdio.h>
    int main()
    {
        system("chcp 1251");
        int n;
        float a,s;
        printf("Введите число n ");
        scanf_s("%d", &n);
        printf("Введите число a ");
        scanf_s("%f", &a);
       
        s = 1;
        for (int i = 0; i < n+1; i++) {
           s = s + a*i;             
        }
        printf("Квадрат %f", s);
 
        return 0;
}
