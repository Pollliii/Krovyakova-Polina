#include <stdio.h>
    int main()
    {
        system("chcp 1251");
        int n;
        float a,s;
        printf("Введите число n ");
        scanf_s("%d", &n);
        printf("Введите число a ");
        scanf_s("%f", &a);
       
        s = 1;
        for (int i = 1; i < n; i+=2) {
           s = s - a*i+a*(i+1);             
        }
        printf("результат %f", s);
 
        return 0;
}
