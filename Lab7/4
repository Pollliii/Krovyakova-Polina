#include <stdio.h> 
#include <math.h> 
#include <locale.h>

int main()
{
	int x, y, s, t, r; //ввод переменных
	printf("Enter the first speed: ");//ввод значения
	scanf_s("%d", &x);
	printf("Enter the second speed: ");//ввод  значения
	scanf_s("%d", &y);
	printf("Enter the distance between them: ");//ввод  значения
	scanf_s("%d", &s);
	printf("Enter the time: ");//ввод  значения
	scanf_s("%d", &t);
	r = s + t * (x + y); //вычисление расстояния
	printf("The distance between them after that time will be: %d\n", r); //вывод  значения
	return 0;
}
