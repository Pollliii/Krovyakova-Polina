#include <math.h> // подключаемем библиотеку для использования математических операций
#include <stdio.h> // подключаем библиотеку ввод/вывода на экран
int main() //определяем функцию
{

	int  k, r,n;// вводим переменные без значени 
	printf("Enter the k ");//просим пользователя ввести k
	scanf_s("%d", &k);//ввод
	printf("Enter the n ");//просим пользователя ввести n
	scanf_s("%d", &n);//ввод
	r =((k+n-2)%7)+1;
	printf("result = %d", r);
	return 0;
}
